{
  "name": "grailed",
  "version": "1.0.0",
  "description": "Use Grailed to find high end pieces from the designers you love.",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "watch-client": "watchify client/client.js -o app/assets/javascripts/bundle.js --verbose",
    "test": "",
    "postinstall": "browserify client/client.js -o app/assets/javascripts/bundle.js"
  },
  "browserify": {
    "verbose": true,
    "transform": [
      [
        "babelify", { "optional": ["runtime"] }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grailed-code/grailed.git"
  },
  "keywords": [
    "grailed",
    "clothes",
    "designers"
  ],
  "author": "Grailed Inc.",
  "bugs": {
    "url": "https://github.com/grailed-code/grailed/issues"
  },
  "homepage": "https://github.com/grailed-code/grailed",
  "dependencies": {
    "babel-runtime": "*",
    "co": "*",
    "bluebird": "*",
    "camelize": "*",
    "lodash": "*",
    "moment": "*",
    "react": "*"
  },
  "devDependencies": {
    "babel": "*",
    "babelify": "*",
    "browserify": "*",
    "watchify": "*"
  }
}
