{
  "name": "grailed",
  "version": "1.0.0",
  "description": "Use Grailed to find high end pieces from the designers you love.",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "build-client": "browserify client/client.js -o app/assets/javascripts/bundle.js",
    "watch-client": "watchify client/client.js -o app/assets/javascripts/bundle.js --verbose",
    "test": ""
  },
  "browserify": {
    "verbose": true,
    "transform": [
      [
        "babelify"
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/grailed-code/grailed.git"
  },
  "keywords": [
    "grailed",
    "clothes",
    "designers"
  ],
  "author": "Grailed Inc.",
  "bugs": {
    "url": "https://github.com/grailed-code/grailed/issues"
  },
  "homepage": "https://github.com/grailed-code/grailed",
  "dependencies": {
    "babel": "^5.5.8",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "camelize": "^1.0.0",
    "lodash": "^3.9.3",
    "moment": "^2.10.3",
    "react": "^0.13.3"
  },
  "devDependencies": {
    "watchify": "*"
  }
}
